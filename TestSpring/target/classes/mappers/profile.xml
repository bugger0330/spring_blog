<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.app.domain.user.ProfileRepository">

	
	<select id="checkNickname" parameterType="String" resultType="com.test.app.domain.user.Profile">
		select * from user_dtl where username = #{username};
	</select>
	
	<update id="nickname" parameterType="com.test.app.domain.user.Profile">
		update user_dtl set nickname = #{nickname} where usercode = #{usercode};
	</update>
	<update id="address" parameterType="com.test.app.domain.user.Profile">
		update user_dtl set address = #{address} where usercode = #{usercode};
	</update>
	<update id="gender" parameterType="com.test.app.domain.user.Profile">
		update user_dtl set gender =  #{gender} where usercode = #{usercode};
	</update>

	<delete id="deleteProfile" parameterType="String">
		delete from user_mst where username = #{username};
	</delete>
		
</mapper>